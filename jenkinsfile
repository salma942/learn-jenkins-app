pipeline {
    agent any 

    stages {
        stage('Hello') {  
            steps {       
                sh """
                    echo "Hello World"
                    ls -la
                """
            }
        }
        
        stage('Docker Build') {
            agent { 
                docker { 
                    image 'node:18-alpine' 
                    reuseNode true 
                } 
            }  

            steps {
                sh """
                    echo "Affichage du contenu du r√©pertoire"
                    ls -la 
                    
                    echo "V√©rification des versions"
                    node --version 
                    npm --version 
                    
                    echo "Installation des d√©pendances"
                    npm ci
                    
                    echo "Build du projet"
                    npm run build
                """
            }
        }

        stage("Test") {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh "npm test"
            }
        }

        stage("Update") {
            agent {
                docker {
                    image 'alpine/git'
                    
                    reuseNode true 
                }
            }
            steps {
                sh """
               
                    
                    echo "Ajout des fichiers au commit"
                    git config --global user.email "jenkins@example.com"
                    git config --global user.name "Jenkins"
                    git add .
                    
                    echo "Commit des modifications"
                    git commit -m "Mise √† jour automatique via Jenkins" || echo "Aucune modification √† valider"
                    
                    echo "Push vers le d√©p√¥t"
                    git push origin main
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline termin√©e üöÄ"
        }
        failure {
            echo "Une erreur est survenue ‚ùå"
        }
    }
}
