pipeline {
    agent any 

    stages {
        stage('Hello') {  // Nom du stage
            steps {       // √âtapes √† ex√©cuter
                sh """
                    echo "Hello World"
                    ls -la
                """
            }
        }
        
        stage('Docker Build') {
            agent { docker { image 'node:18-alpine' } }  // Ex√©cuter dans un conteneur Node.js

            steps {
                sh """
                    echo "Affichage du contenu du r√©pertoire"
                    ls -la 
                    
                    echo "V√©rification des versions"
                    node --version 
                    npm --version 
                    
                    echo "Installation des d√©pendances"
                    npm ci
                    
                    echo "Build du projet"
                    npm run build
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline termin√©e üöÄ"
        }
        failure {
            echo "Une erreur est survenue ‚ùå"
        }
    }
}
